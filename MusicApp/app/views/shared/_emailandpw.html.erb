<% action_url = (action == "register") ? users_url : sessions_url %>
<% button = (action == "register") ? "Create Account" : "Log In" %>

<form action=" <%= action_url %>" method="post">
  <%= auth_token %>
  <label for="email">Email</label>
  <input type="text" name="users[email]" id="email">

  <br>
  <label for="pw">Password</label>
  <input type="Password" name="users[password]" id="pw">

  <br>
  <input type="submit" value="<%= button %>"">
</form>