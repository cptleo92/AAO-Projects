<table>
  <thead>
    <tr>
      <th colspan="2"><%= @track.title %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Band</td>
      <td><%= @track.band.name %></td>
    </tr>
    <tr>
      <td>Album</td>
      <td><%= @track.album.title %></td>
    </tr>  
    <tr>
      <td>Regular/Bonus</td>
      <td><%= @track.bonus ? "Bonus" : "Regular" %></td>
    </tr>
  </tbody>
</table>

<% unless @track.lyrics.nil? %>
  <p>Lyrics</p>
  <%= ugly_lyrics(@track.lyrics) %>
<% end %>
<br>
<%= render "notes/note", track: @track %>
<br>
<%= render "notes/form", track: @track %>
<br>


<br>
<%= link_to "Edit", edit_track_url %>
<br>
<%= link_to "Back to album", album_url(@track.album) %>
<br>
<%= link_to "Back to artist", band_url(@track.band) %>