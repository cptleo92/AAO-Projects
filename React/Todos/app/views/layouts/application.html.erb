<!DOCTYPE html>
<html>
  <head>
    <title>TodosRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      Welcome, <%= current_user.username if current_user %>
      <% if logged_in? %>
        <%= link_to "Log Out", session_url, method: :delete %>
      <% else %>
        <%= link_to "Log In", new_session_url %>
        <%= link_to 'Create Account', new_user_url %>
      <% end %>
      
      </header>
    <%= yield %>
  </body>
</html>
