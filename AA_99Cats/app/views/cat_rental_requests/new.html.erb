<h1>Rent a cat!</h1>

<h3>Who would you like to borrow?</h3>


<form action="/cat_rental_requests" method="post">
  <label for="rental">Name</label>
  <select id="rental" name="cat_rental_request[cat_id]">
    <option disabled>--Please Select</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date:</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]"
        min="<%= Date.today %>">

  <br>
  <label for="end_date">End Date:</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]"
        min="<%= Date.today %>">
  <br>
  <input type="submit" value="Request!">
  <br>
  <a href="<%= cats_url %>">Back to Index</a>
</form>